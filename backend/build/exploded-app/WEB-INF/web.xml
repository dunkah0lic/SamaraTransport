<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.nikolaychernov.activation.backend.MyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CronUpdateServlet</servlet-name>
        <servlet-class>com.nikolaychernov.activation.backend.CronUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CronUpdateServlet</servlet-name>
        <url-pattern>/cron/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>InitServlet</servlet-name>
        <servlet-class>com.nikolaychernov.activation.backend.InitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitServlet</servlet-name>
        <url-pattern>/init</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ActivationServlet</servlet-name>
        <servlet-class>com.nikolaychernov.activation.backend.ActivationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActivationServlet</servlet-name>
        <url-pattern>/activation</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>